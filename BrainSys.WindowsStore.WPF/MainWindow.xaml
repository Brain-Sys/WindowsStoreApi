<Window x:Class="BrainSys.WindowsStore.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrainSys.WindowsStore.WPF"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="480" Width="640">
    <StackPanel Margin="8">
        <TextBlock Text="Tenant ID" FontSize="22" Margin="4" />
        <TextBox FontSize="22" Margin="4" x:Name="ValueTenantId" />
        <TextBlock Text="Client ID" FontSize="22" Margin="4" />
        <TextBox FontSize="22" Margin="4" x:Name="ValueClientId" />
        <TextBlock Text="Client Secret" FontSize="22" Margin="4" />
        <TextBox FontSize="22" Margin="4" x:Name="ValueClientSecret" />
        <TextBlock Text="App ID" FontSize="22" Margin="4" />
        <TextBox FontSize="22" Margin="4" x:Name="ValueAppId" />
        <Button Content="Get Info" Margin="4" FontSize="26"
                x:Name="GetInfoButton" Click="GetInfoButton_Click" />
    </StackPanel>
</Window>